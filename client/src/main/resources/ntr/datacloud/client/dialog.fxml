<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox id="dialog" alignment="TOP_CENTER" minHeight="50" minWidth="100" prefHeight="150" prefWidth="250" stylesheets="@style_dialog.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">

    <children>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <children>
                <Label id="dialog_text" fx:id="dialogText" text="dialogHeader" textAlignment="CENTER" />

            </children>
        </HBox>
        <TextField fx:id="dialogTextField" maxWidth="200.0" minWidth="200.0" prefWidth="200.0">
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
        </TextField>

        <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
            <children>
                <Button id="dialog_button" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#btnDialogClicked" text="OK" HBox.hgrow="NEVER">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </HBox.margin>
                </Button>
            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
