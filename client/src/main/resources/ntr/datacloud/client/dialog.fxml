<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" minHeight="50" minWidth="100"  prefHeight="150" prefWidth="250" stylesheets="@style.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
     <!-- fx:controller="ntr.datacloud.client.controller.DialogController">-->

    <children>
        <Text fx:id="dialogHeader" strokeType="OUTSIDE" strokeWidth="0.0" text="dialogHeader" textAlignment="CENTER">
            <VBox.margin>
                <Insets top="5.0" />
            </VBox.margin>
        </Text>
        <HBox fx:id="inputBox" alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="10.0" VBox.vgrow="ALWAYS">
            <children>
                <Label fx:id="dialogLabel" alignment="CENTER_RIGHT" minWidth="0.0" text="dialogLabel" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets right="5.0" />
                    </HBox.margin>
                </Label>
                <TextField fx:id="dialogTextField" HBox.hgrow="ALWAYS">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <HBox.margin>
                        <Insets left="5.0" />
                    </HBox.margin>
                </TextField>
            </children>
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
        </HBox>

        <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
            <children>
                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#btnDialogClicked" text="OK">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </HBox.margin>
                </Button>
            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
        </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
