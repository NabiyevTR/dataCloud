<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" minHeight="500.0" minWidth="500.0" prefHeight="600.0" prefWidth="800.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ntr.datacloud.client.controller.MainAppController">

    <children>

        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Close" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Delete" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>


        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <children>
                <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                    <children>


                        <TableView fx:id="clientFileList" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="clientFileListNameCol" editable="false" prefWidth="75.0" sortable="false" text="Name" />
                                <TableColumn fx:id="clientFileListSizeCol" editable="false" maxWidth="75.0" minWidth="75.0" prefWidth="75.0" sortable="false" text="Size" />
                            </columns>
                            <opaqueInsets>
                                <Insets />
                            </opaqueInsets>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>

                        </TableView>
                        <HBox alignment="CENTER">
                            <children>
                                <Button mnemonicParsing="false" text="Up">
                                    <HBox.margin>
                                        <Insets left="5.0" right="5.0" />
                                    </HBox.margin>
                                </Button>
                                <Button mnemonicParsing="false" text="Create dir">
                                    <HBox.margin>
                                        <Insets left="5.0" right="5.0" />
                                    </HBox.margin>
                                </Button>
                                <Button mnemonicParsing="false" text="Delete">
                                    <HBox.margin>
                                        <Insets left="5.0" right="5.0" />
                                    </HBox.margin>
                                </Button>
                                <Button mnemonicParsing="false" text="Rename">
                                    <HBox.margin>
                                        <Insets left="5.0" right="5.0" />
                                    </HBox.margin>
                                </Button>
                            </children>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </HBox>

                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
                <VBox alignment="CENTER" maxWidth="40.0" minWidth="40.0" prefHeight="200.0" prefWidth="40.0" HBox.hgrow="NEVER">
                    <children>
                        <Button onAction="#upload"  mnemonicParsing="false" text="&gt;">
                            <VBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" />
                            </VBox.margin>
                        </Button>
                        <Button onAction="#download" mnemonicParsing="false" text="&lt;">
                            <VBox.margin>
                                <Insets left="5.0" right="5.0" top="5.0" />
                            </VBox.margin>
                        </Button>

                    </children>
                </VBox>
                <VBox prefHeight="200.0" prefWidth="100.0" stylesheets="@style.css" HBox.hgrow="ALWAYS">
                    <children>


                        <TableView fx:id="serverFileList" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="serverFileListNameCol" editable="false" prefWidth="75.0" sortable="false" text="Name" />
                                <TableColumn fx:id="serverFileListSizeCol"    editable="false" maxWidth="75.0" minWidth="75.0" prefWidth="75.0" sortable="false" text="Size" />
                            </columns>
                            <opaqueInsets>
                                <Insets />
                            </opaqueInsets>
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                        <HBox alignment="CENTER">
                            <children>
                                <Button mnemonicParsing="false" text="Up">
                                    <HBox.margin>
                                        <Insets left="5.0" right="5.0" />
                                    </HBox.margin>
                                </Button>
                                <Button mnemonicParsing="false" stylesheets="@style.css" text="Create dir">
                                    <HBox.margin>
                                        <Insets left="5.0" right="5.0" />
                                    </HBox.margin>
                                </Button>
                                <Button mnemonicParsing="false" text="Delete">
                                    <HBox.margin>
                                        <Insets left="5.0" right="5.0" />
                                    </HBox.margin>
                                </Button>
                                <Button mnemonicParsing="false" text="Rename">
                                    <HBox.margin>
                                        <Insets left="5.0" right="5.0" />
                                    </HBox.margin>
                                </Button>
                            </children>
                            <padding>
                                <Insets top="10.0" />
                            </padding>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>


            </children>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </HBox>


        <HBox alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="723.0" VBox.vgrow="NEVER">
            <children>
                <Button mnemonicParsing="false" text="Logoff">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin></Button>
                <Button mnemonicParsing="false" text="Exit">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin></Button>
            </children>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </HBox>


    </children>
</VBox>
